<h2>All My Bookings</h2>
<ul>
  <% @bookings.each do |booking| %>
  <% duration_in_days = (booking.end_date - booking.start_date).to_i + 1 %>
  <li>
  <%= booking.surfboard.board_type %><p><%= booking.start_date.strftime("%B %e") %> - <%= booking.end_date.strftime("%B %e") %> <strong>(<%= duration_in_days %> <%= 'day'.pluralize(duration_in_days) %>)</strong></p></li>
  <% end %>
</ul>


<div class="surfboards-index">
<h1>ALL SURFBOARDS</h1>

<% if @surfboards.any? %>
<div id='surfboard-container'>
  <ul>
    <% @surfboards.each do |surfboard| %>
      <li class="surfboard_card">
          <% surfboard.photos.each do |photo| %>
          <div class="surfboard-image">
            <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
          </div>
        <% end %>
        <div class="surfboard-info">
          <h3><%= link_to surfboard.board_type, surfboard_path(surfboard) %></h3>
          <p>Description: <%= surfboard.description %></p>
          <p>Location: <%= surfboard.location %></p>
          <p>Availability: <%= surfboard.availibility %></p>
        </div>
      </li>
    <% end %>
  </ul>
  </div>
<% else %>
  <p>No surfboards found.</p>
<% end %>

<%= link_to "CREATE NEW", new_surfboard_path, class: "create-new-link" %>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

</div>

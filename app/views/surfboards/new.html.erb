        <%= form.input :photos, as: :file, input_html: { multiple: true } %>
  </div>
  <div class="field-container">
        <%= form.input :description %>
  </div>
  <div class="field-container">
        <%= form.input :availibility %>
  </div>
  <div class="field-container">
        <%= form.input :price, label: "price â‚¬/day" %>

<div class="form-container">
  <%= form_with(model: @surfboard, local: true) do |form| %>
    <div class="field-container">
      <%= form.label :board_type %>
      <%= form.text_field :board_type%>
    </div>

  <h1>Add a New Surfboard</h1>

  <%= simple_form_for(@surfboard) do |form| %>
<div class="field-container">
      <%= form.input :board_type %>
</div>
<div class="field-container">
      <%= form.input :photos, as: :file, input_html: { multiple: true } %>
 </div>
<div class="field-container">
      <%= form.input :description %>
 </div>
<div class="field-container">
      <%= form.input :availibility %>
 </div>
<div class="field-container">
      <%= form.input :location %>
</div>
    <%= form.submit %>
  <% end %>
